<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/titletag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="50dp"
        android:text=" 드라마 제목 : "
        android:textSize="20dp" />



    <TextView
        android:id="@+id/datetag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="100dp"
        android:text=" 시청 날짜 : "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/startag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="150dp"
        android:text=" 평 점 : "
        android:textSize="20dp" />


    <TextView
        android:id="@+id/reviewtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="200dp"
        android:text=" 나의 리뷰 : "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/imagetag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="250dp"
        android:text=" 드라마 포스터 :"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignBaseline="@+id/titletag"
        android:layout_toRightOf="@+id/titletag"
        android:hint="홍길동"
        android:inputType="text" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="246dp"
        android:layout_height="353dp"
        android:layout_alignBaseline="@+id/imagetag"
        android:layout_marginLeft="-104dp"
        android:layout_toRightOf="@+id/imagetag"
        android:ems="10"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_image" />

    <EditText
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/datetag"
        android:layout_toRightOf="@+id/datetag"
        android:ems="10"
        android:hint="20191212"
        android:inputType="number" />

    <EditText
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignBaseline="@+id/startag"
        android:layout_toRightOf="@+id/startag"
        android:hint="10"
        android:inputType="number" />


    <EditText
        android:id="@+id/review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignBaseline="@+id/reviewtag"
        android:layout_toRightOf="@+id/reviewtag"
        android:hint="너무 갬동적"
        android:inputType="text" />


    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:text="저장"
        android:layout_marginLeft="100dp"/>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:text="처음으로"
        android:layout_marginLeft="230dp"/>

</RelativeLayout>